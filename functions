function systemCheck {
    dmesg | grep efi: &> /dev/null;

    if [[ $? == 0 ]]; then
        echo -e "EFI detected.\nInstallation script started!"
    else
        echo -e "MBR/DOS installation not yet supported!!\nExitting script!!";
        exit 1;
    fi

}

# Setting up install environment;
