# Author: fluffeh
# v2.0 - 26-01-2021
# Source: https://git.io/fluffeh-archsin
# Install command: curl --location "https://git.io/fluffeh-archsin" | /bin/bash
# Details: This is the barebones install. It will leave you with a working system.
#   For quick program installation and configuration use archsin-pinstall
#
########################################

# Pulling Disk Layout file
curl --remote-name "https://raw.githubusercontent.com/fluffehGit/archsin/master/efiBTRFS.disk.layout";

# Pulling functions file
curl --remote-name "https://raw.githubusercontent.com/fluffehGit/archsin/master/functions";
source functions

## Installation sequence

systemCheck;

# Updating the system clock
timedatectl set-ntp true;

# Env setup
getEnvironment;

# Setting mirrorlist
setMirrors;

# Parttion disk
setDisk;

# Installing essentials
pacstrap /mnt base base-devel linux linux-firmware linux-headers btrfs-progs grub grub-btrfs efibootmgr;

# Generating FSTab
genfstab -U /mnt >> /mnt/etc/fstab;

cp functions /mnt/root/;

arch-chroot /mnt /bin/bash << EOCHROOT

    source \$HOME/functions;

    createSwap;
    installPackages "${REPOAPITOKEN}" "${REPOID}";
    setLocale "${CITY}";
    setHost "${HSTNAME}";
    setInitramfs "${REPOAPITOKEN}" "${REPOID}";
    setUser "${USRGROUPS}" "${USRNAME}" "${USRPASSWD}" "${REPOAPITOKEN}" "${REPOID}";
    getConfigs "${GITLABHEADER}" "${REPOID}";

    git config --global user.name $GITROOTUSR;
    git config --global user.email $GITROOTMAIL;

    # Generating ED25519 keyfile
    #TBD AUTOMATION OF THE BELOW
    ssh-keygen -t ed25519 -C "\${USER} on ${HSTNAME}";

    shred --verbose -u --zero --iterations=3 \$HOME/functions;

EOCHROOT

rm /mnt/root/functions

curl "https://raw.githubusercontent.com/fluffehGit/archsin/master/post-install" --output /mnt/home/$USRNAME/post-install;

sed --in-place "1i \
    GITLABHEADER=\"${GITLABHEADER}\"\n \
    REPOID=\"${REPOID}\"\n \
    GITUSR=\"${GITUSR}\"\n \
    GITMAIL=\"${GITMAIL}\"\n \
    HSTNAME=\"${HSTNAME}\"\n \
    " /mnt/home/$USRNAME/post-install;
